<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/languageselectionbackground"
    android:padding="16dp">

    <!-- TextView zur Anzeige der Willkommensnachricht -->

    <!-- Spinner zur Auswahl der Sprache -->


    <!-- In deiner fragment_language_selection.xml -->


    <TextView
        android:id="@+id/tv_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/quicksandbold"
        android:text="@string/languageselectionmessage"
        android:textAlignment="center"
        android:textColor="@color/lsftitles"
        android:textSize="41sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_language_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        android:background="@drawable/spinner_background"
        android:entries="@array/language_options"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:theme="@style/SpinnerTextStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_language"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginTop="430dp"
        android:layout_marginBottom="237dp"
        android:backgroundTint="@color/background"
        android:fontFamily="@font/quicksandbold"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chooselanguage"
        android:layout_width="212dp"
        android:layout_height="60dp"
        android:layout_marginTop="226dp"
        android:layout_marginBottom="429dp"
        android:fontFamily="@font/quicksandbold"
        android:text="@string/choose_your_language"
        android:textAlignment="center"
        android:textColor="@color/lsftitles"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textDirection="firstStrong"
        android:textFontWeight="700"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
