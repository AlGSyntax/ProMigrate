<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/et_border"
        android:fontFamily="@font/quicksandvariablefontwght"
        android:hint="@string/hint_first_name"
        android:autofillHints="name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/textcolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/et_border"
        android:fontFamily="@font/quicksandvariablefontwght"
        android:hint="@string/hint_last_name"
        android:autofillHints="name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/textcolor"
        app:layout_constraintTop_toBottomOf="@+id/etFirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/et_border"
        android:fontFamily="@font/quicksandvariablefontwght"
        android:hint="@string/hint_phone_number"
        android:autofillHints="phone"
        android:inputType="phone"
        android:minHeight="48dp"
        android:textColor="@color/textcolor"
        app:layout_constraintTop_toBottomOf="@+id/etLastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etStreet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/et_border"
        android:fontFamily="@font/quicksandvariablefontwght"
        android:hint="@string/hint_street"
        android:autofillHints="postalAddress"
        android:inputType="textPostalAddress"
        android:minHeight="48dp"
        android:textColor="@color/textcolor"
        app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etBirthPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/et_border"
        android:fontFamily="@font/quicksandvariablefontwght"
        android:hint="@string/hint_birth_place"
        android:inputType="text"
        android:autofillHints="postalAddress"
        android:minHeight="48dp"
        android:textColor="@color/textcolor"
        app:layout_constraintTop_toBottomOf="@+id/etStreet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <EditText
        android:id="@+id/etMaidenName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/et_border"
        android:fontFamily="@font/quicksandvariablefontwght"
        android:hint="@string/hint_maiden_name"
        android:inputType="text"
        android:autofillHints="name"
        android:minHeight="48dp"
        android:textColor="@color/textcolor"
        app:layout_constraintTop_toBottomOf="@+id/etBirthPlace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

