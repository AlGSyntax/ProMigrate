<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DashboardFragment">

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="608dp"
        android:fontFamily="@font/quicksandvariablefontwght"
        android:text="@string/dashboard"
        android:textColor="@color/titles"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTopLeft"
        android:layout_width="166dp"
        android:layout_height="121dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="428dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/todojobresearchbackground" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTopRight"
        android:layout_width="166dp"
        android:layout_height="121dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="428dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/todolanguagelearningbackground" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBottomLeft"
        android:layout_width="166dp"
        android:layout_height="121dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="281dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/todojobapplicationbackground" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBottomRight"
        android:layout_width="166dp"
        android:layout_height="121dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="281dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/todointegrationandrelocationbackground" />

    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/tosettingsfragbtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="335dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="645dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_admin_panel_settings_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
