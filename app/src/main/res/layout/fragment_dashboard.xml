<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DashboardFragment">

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="608dp"
        android:text="@string/dashboard"
        android:fontFamily="@font/quicksandvariablefontwght"
        android:textColor="@color/titles"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTopLeft"
        android:layout_width="166dp"
        android:layout_height="121dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardBottomLeft"
        app:layout_constraintEnd_toStartOf="@+id/cardTopRight"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTopRight"
        android:layout_width="166dp"
        android:layout_height="121dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cardBottomRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toEndOf="@+id/cardTopLeft"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBottomLeft"
        android:layout_width="166dp"
        android:layout_height="121dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardBottomRight"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardTopLeft"
        app:layout_constraintWidth_percent="0.4" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBottomRight"
        android:layout_width="166dp"
        android:layout_height="121dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toEndOf="@+id/cardBottomLeft"
        app:layout_constraintTop_toBottomOf="@+id/cardTopRight"
        app:layout_constraintWidth_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>
